		<dependency>
			<groupId>com.iitms</groupId>
			<artifactId>rfcampusdata</artifactId>
			<version>1.0.0-BUILD-SNAPSHOT</version>
		</dependency>
		<!--  RF-Campus-common -->
		<dependency>
